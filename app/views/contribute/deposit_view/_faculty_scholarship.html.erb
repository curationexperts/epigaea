<%# NOTE: this form uses bootstrap_form_for and bootstrap_forms helpers - see: https://github.com/sethvargo/bootstrap_forms %>

<%= f.text_field :title, help_block: 'Please limit titles to 250 characters or less.', required: true %>

<%= f.text_field :creator, value: current_user.display_name, label: 'Contributor', required: true  %>

<%= f.text_field :bibliographic_citation, help_block: '<b>Optional</b> - the bibliographic citation field may be left blank'.html_safe %>

<%= other_authors_fields(@contribution, f) %>

<%= f.select :embargo, standard_embargos,  label: 'Embargo'  %>

<span class="help-block">An embargo will restrict all access to your work until the selected time has passed.</span>

<%= f.text_area :description, label: 'Short description', help_block: 'Please limit description to 2000 characters or less.', rows: 5, class: 'col-sm-8', required: true %>
